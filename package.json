{
  "name": "accessibility-monitor-tool",
  "version": "1.0.0",
  "description": "Ferramenta de monitorização de acessibilidade web alinhada com o AccessMonitor (acessibilidade.gov.pt)",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "monitor:start": "ts-node src/monitoring/portfolio-monitor.ts",
    "monitor:test": "ts-node src/monitoring/portfolio-monitor.ts --test",
    "audit": "ts-node src/scripts/simple-audit.ts",
    "audit:multi": "ts-node src/scripts/multi-page-audit.ts",
    "audit:batch": "ts-node src/scripts/batch-audit.ts",
    "test:accessmonitor": "ts-node src/scripts/test-accessmonitor.ts",
    "test:accessmonitor-simple": "ts-node src/scripts/test-accessmonitor-simple.ts",
    "audit:single": "ts-node src/scripts/accessibility-audit.ts --single",
    "audit:site": "ts-node src/scripts/accessibility-audit.ts",
    "quick-test": "ts-node src/scripts/quick-test.ts",
    "generate-report": "ts-node src/scripts/generate-correct-report.ts",
    "test:enhanced": "ts-node src/scripts/test-enhanced-auditor.ts"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "axe-core",
    "monitoring",
    "accessmonitor",
    "acessibilidade.gov.pt"
  ],
  "author": "UNTILE",
  "license": "MIT",
  "dependencies": {
    "axe-core": "^4.7.0",
    "playwright": "^1.40.0",
    "puppeteer": "^21.6.0",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
